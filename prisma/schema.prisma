generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Bookings {
  id          Int             @id @default(autoincrement())
  email       String
  firstName   String
  lastName    String
  date        DateTime
  time        String
  phone       String          @db.VarChar(40)
  type        String
  environment Boolean
  description String?         @default("") @db.Text
  status      BookingsStatus? @default(pending)
  features    String?         @default("") @db.Text
  tasks       Tasks[]
  orders      Orders?

  @@index([status])
  @@map("bookings")
}

model Projects {
  id           Int      @id @default(autoincrement())
  name         String   @unique //Name for project to help admin easily identify it
  title        String?
  description  String?  @db.Text
  thumbnail    String?
  createdAt    DateTime @default(now())
  testimonial  String?  @default("") @db.Text
  companyName  String?  @default("")
  customerName String?
  images       Images[]
  published    Boolean  @default(false)
  type         String?
  pinned       Boolean  @default(false)

  @@map("projects")
}

model Images {
  id        Int           @id @default(autoincrement())
  width     Int
  height    Int
  url       String
  alt       String?       @default("") @db.Text
  published Boolean       @default(false)
  name      String
  projectId Int?
  type      String
  size      Int
  fullPath  String
  project   Projects?     @relation(fields: [projectId], references: [id])
  folder    ImageFolders? @relation(fields: [folderId], references: [id], onDelete: Cascade)
  folderId  Int?

  @@index([projectId])
  @@index([folderId])
  @@map("images")
}

model ImageFolders {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  Images    Images[]
}

model TaskLists {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(255)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  pinned    Boolean  @default(false)
  tasks     Tasks[]

  @@map("task_lists")
}

model Tasks {
  id          Int          @id @default(autoincrement())
  name        String
  deadline    DateTime?
  description String?      @default("") @db.Text
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now()) @updatedAt
  status      Boolean      @default(false)
  priority    TaskPriority @default(medium)
  groupId     Int?
  bookingId   Int?
  group       TaskLists?   @relation(fields: [groupId], references: [id], onDelete: Cascade)
  booking     Bookings?    @relation(fields: [bookingId], references: [id])

  @@index([groupId])
  @@index([bookingId])
  @@map("tasks")
}

enum BookingsStatus {
  completed
  pending
  approved
}

enum TaskPriority {
  low
  medium
  high
}

model Orders {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  quote     Int //Amount of money made saved in cents
  booking   Bookings @relation(fields: [bookingId], references: [id])
  bookingId Int      @unique
  year      Int
  month     String
}
